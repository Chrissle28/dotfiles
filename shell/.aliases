# Composer Alias

alias composer="COMPOSER_MEMORY_LIMIT=-1 composer"
alias cda="composer dumpautoload"
alias ccc="composer clear-cache" 
alias gcomposer="nvim ~/.composer"

# ZSH Shortcuts

alias zshconfig="nvim ~/.zshrc" 
alias reload="source ~/.zshrc" 
alias dotfiles="nvim ~/.dotfiles"
alias ohmyzsh="nvim ~/.oh-my-zsh"

## Laravel

alias pa="php artisan" 
alias paca="pa cache:clear && pa route:clear && pa config:clear && pa view:clear" 
alias setup:seed="php artisan migrate:fresh --seed; php artisan cache:clear"

## Git

alias ga="git add ." 
alias gc="git commit -m" 
alias gcb="git checkout -b" 
alias gch="git checkout" 
alias gp="git push" 
alias greset="git reset --soft HEAD~1"

## NPM

alias stimport="npm run strapi import -- -f"
alias stexport="npm run strapi export -- --file"

## Symfony

alias symfony="bin/console" 
alias bc="bin/console"

#misc 
alias cpenv="cp .env.example .env" 
alias grep="grep -n --color" 
alias del="rm -rf" 
alias sshkey="cat ~/.ssh/id_rsa.pub | pbcopy"
alias sshkeynew="cat ~/.ssh/id_ed25519.pub | pbcopy"
alias nvdir="cd ~/.config/nvim"
